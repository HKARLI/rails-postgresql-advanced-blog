<% end %>
$.slidePanel.show({
  content: '<%= j render "shared/sliderpanel", title: "Edit blog", slidercontent: slideContent %>'
}, {
  closeSelector: '.slidePanel-close',
  direction: 'right',
  mouseDrag: false,
  touchDrag: false,
  pointerDrag: false
});
