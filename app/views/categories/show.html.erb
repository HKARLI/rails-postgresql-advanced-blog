<div role="main" class="main">
  <section class="page-top">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ul class="breadcrumb">
              <li ><a href="/">Girişimci Okulu</a></li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h1>Blog</h1>
        </div>
      </div>
    </div>
  </section>
  <div class="container">
    <div class="row">
      <div class="col-md-9">  
        <div class="blog-posts">
          <% @categories.blog.each do |blog| %>
            <article class="post post-large">
              <div class="post-image">
                <div class="img-thumbnail">
                  <%= image_tag blog.image.url(:medium) %>
                </div>
              </div>
              <div class="post-date">
                <span class="day"><%= blog.created_at.strftime("%d")%></span>
                <span class="month"><%= blog.created_at.strftime("%m")%></span>
              </div>
              <div class="post-content">
                <h2><%= link_to blog.baslik, blog_path(blog)	%></h2>
                <p><%= blog.kisaicerik %></p>
              <div class="post-meta">
                <span><i class="fa fa-user"></i> By <a href="/users/<%= blog.user_id%>"><%= blog.user.name%></a> </span>
                <span><i class="fa fa-comments"></i> <%= blog.comments_count %> Yorum</span>
                <%= link_to "DevamınıOku...",blog_path(blog), {class: "btn btn-xs btn-primary pull-right"} %>
              </div>
                  </div>
            </article>
          <% end %>
              </div>
          </div>
      <%= render 'layouts/sidebar'%>
    </div>
  </div>
</div>
