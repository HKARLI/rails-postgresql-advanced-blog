<%= simple_form_for @comment do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group">
      <div class="col-md-6">
        <label>İsminiz *</label>
         <%= f.input :isim, label: false,input_html:{ class: "form-control"} %>
      </div>
      <div class="col-md-6">
        <label>Mail Adresiniz *</label>  
        <%= f.input :mail, label: false, input_html:{ class: "form-control"}%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-md-12">
        <label>Mesajınız *</label>
        <%= f.input :icerik, label: false,as: :text,input_html: { maxlength: 5000, 'rows': 10, class: "form-control"} %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.input :blog_id, as: :hidden, input_html:{ value: @blog&.id}%>
    <%= f.submit value:'Yorum Yap', class: "btn btn-primary" %>
  </div>
<% end %>